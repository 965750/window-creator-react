{
    "name": "create-simple-app",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.21",
        "@fortawesome/free-solid-svg-icons": "^5.10.1",
        "@fortawesome/react-fontawesome": "^0.1.4",
        "axios": "^0.19.0",
        "bootstrap": "^4.3.1",
        "firebase": "^6.4.1",
        "node-sass": "^4.12.0",
        "prop-types": "^15.7.2",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-intl": "^3.1.9",
        "react-redux": "^7.1.0",
        "react-redux-firebase": "^2.4.0",
        "react-router-dom": "^5.0.1",
        "react-scripts": "3.0.1",
        "redux": "^4.0.4",
        "redux-firestore": "^0.8.0",
        "redux-thunk": "^2.3.0"
    },
    "scripts": {
        "start": "npm-run-all --parallel watch:css start:react",
        "build": "npm-run-all build:css build:react",
        "build:css": "postcss src/css/tailwind.css -o src/index.css",
        "watch:css": "postcss src/css/tailwind.css -o src/index.css -w",
        "start:react": "react-scripts start",
        "build:react": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "autoprefixer": "^9.6.1",
        "husky": "^3.0.3",
        "lint-staged": "^9.2.1",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^6.1.3",
        "prettier": "1.18.2",
        "tailwindcss": "^1.1.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,css,json,md}": [
            "prettier --write",
            "git add"
        ]
    }
}
